{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2020", "DOM"],

    "rootDir": "src",
    "outDir": "lib",

    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
